#############################################
# üåê Vite Dev Server Configuration
#############################################

# Host Vite should bind to (0.0.0.0 allows external access, e.g., Docker or LAN)
VITE_HOST=0.0.0.0

# Port for local development server
VITE_PORT=8080

# Comma-separated list of allowed host headers
VITE_ALLOWED_HOSTS=yourfrontenddomain.com,auth.yourbackenddomain.com

# Public domain used for Hot Module Replacement (HMR) in development
VITE_HMR_HOST=yourfrontenddomain.com

#############################################
# üîê Discord OAuth Integration
#############################################

# Discord Application Client ID (from Discord Developer Portal)
VITE_DISCORD_CLIENT_ID=your_discord_client_id_here

# Frontend OAuth2 callback route
VITE_DISCORD_REDIRECT_URI=https://yourfrontenddomain.com/auth/discord/callback

#############################################
# üîÅ Backend API Configuration
#############################################

# Base URL of the authentication API server (no trailing slash)
VITE_AUTH_API_BASE_URL=https://auth.yourbackenddomain.com

# Optional prefix used for API versioning
VITE_API_VERSION_PREFIX=/api

# Session token refresh interval (in milliseconds)
VITE_SESSION_REFRESH_INTERVAL=604800000

# Access token expiration (in milliseconds)
VITE_SESSION_ACCESS_INTERVAL=3600000

#############################################
# üéÆ Discord Guild & Role Configuration
#############################################

# Discord Guild (Server) used for all role checks
VITE_ADMIN_SERVER_GUILD_ID=your_discord_guild_id_here

# Admin role ID (grants full access to the platform)
VITE_ADMIN_ROLE_ID=your_admin_role_id_here

# Verified user role ID (basic login access)
VITE_VERIFIED_USER_ROLE_ID=your_verified_user_role_id_here

# Verified member role ID (for perks/rewards access)
VITE_VERIFIED_MEMBER_ROLE_ID=your_verified_member_role_id_here

# Verification-specific roles
VITE_GOVERNMENT_ROLE_ID=your_government_role_id_here
VITE_MILITARY_ROLE_ID=your_military_role_id_here
VITE_EDUCATION_ROLE_ID=your_education_role_id_here

#############################################
# üõ† Placeholder Role IDs for Future Use
#############################################

# Moderator dashboard & forum moderation
VITE_MODERATOR_ROLE_ID=your_moderator_role_id_here

# Streamer role (analytics, profile, stream visibility)
VITE_STREAMER_ROLE_ID=your_streamer_role_id_here

# Role for stream verification panel
VITE_STREAMER_VERIFICATION_ROLE_ID=your_streamer_verification_role_id_here

# Donor-only content and recognition
VITE_DONOR_ROLE_ID=your_donor_role_id_here

# Subscriber-only content and store
VITE_SUBSCRIBER_ROLE_ID=your_subscriber_role_id_here

#############################################
# üß© Community Features (Optional)
#############################################

# Comma-separated list of Discord Guilds used for community features
VITE_DISCORD_GUILD_IDS=guild_id_1,guild_id_2,guild_id_3
