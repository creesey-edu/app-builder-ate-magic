
# Stage 1: Build
FROM node:22-alpine AS builder
WORKDIR /app

# Copy full package.json and lockfile to install ALL deps (including dev for build tools like vite)
COPY package.json ./
COPY package-lock.json ./
RUN npm ci

COPY . .
RUN npm run build

# Stage 2: Serve with NGINX
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

